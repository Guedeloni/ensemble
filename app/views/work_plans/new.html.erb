<div class='container'>
  <div class='mt-5'>
    <%= simple_form_for @work_plan do |f| %>
      <!-- <h1>Création du plan de travail</h1> -->
      <div class='d-flex justify-content-between'>
        <%= f.input :name, label: '', placeholder: 'Plan de travail...' %>
        <%= f.input :start_date, as: :string, label: '_',
                    placeholder: 'Période du',
                    input_html: {class: 'datepicker '} %>
        <%= f.input :end_date, as: :string, label: '_',
                    placeholder: 'au',
                    input_html: {class: 'datepicker'} %>
      </div>
      <div style="width:100%; height:3em; border: 1px solid grey">
      </div>
      <div class='d-flex justify-content-between mt-5'>
        <img class="avatar-ensemble" src='https://images.unsplash.com/photo-1607211851821-8be3cd6146f0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80' alt="child hand">
        <!-- <img class='avatar' src='../../assets/images/child_hand.jpg' alt="child hand"> -->
        <%= f.association :student, label: 'Elève',
                          collection: @students.order(:first_name),
                          label_method: :first_name %>
        <%= f.simple_fields_for :work_plan_domains do |domain_form| %>
          <%= domain_form.input :domain, label: 'Domaine',
                                collection: WorkPlanDomain::DOMAINS %>
          <%= domain_form.input :level, label: 'Niveau',
                                collection: WorkPlanDomain::LEVELS %>
          <% end %>
        <%= f.submit "Valider", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
