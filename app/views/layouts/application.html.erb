    <%# sur toutes les pages xD                                                          %>
    <%# :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::%>

    <% if ['pages', 'devise/registrations', 'devise/sessions' ].include?(params[:controller]) %>

      <div class="pastouche"><%= yield %></div>
    <% else %>
      <div class="container2">
        <div class="navgauche"><%= render 'shared/nav_gauche' %></div>
        <div class="contenu">
          <div class="navhaut"><%= render 'shared/nav_haut' %></div>
          <div class="pastouche" style="margin: 0 auto"><%= yield %></div>
        </div>
      </div>
    <% end %>



  </body>
</html>
